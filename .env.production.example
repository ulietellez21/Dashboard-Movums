# =============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN - EJEMPLO
# =============================================================================
# IMPORTANTE: Copiar este archivo a .env en el servidor y completar los valores.
# NUNCA commitear el archivo .env real con credenciales.
# =============================================================================

# --- Seguridad (OBLIGATORIO) ---
DEBUG=False
SECRET_KEY=<generar-con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())">
ALLOWED_HOSTS=movums.com.mx,www.movums.com.mx

# --- Base de datos PostgreSQL (OBLIGATORIO) ---
DB_ENGINE=django.db.backends.postgresql
DB_NAME=defaultdb
DB_USER=doadmin
DB_PASSWORD=<tu-password-de-digitalocean>
DB_HOST=<tu-host-de-digitalocean>.db.ondigitalocean.com
DB_PORT=25060

# --- Sentry - Monitoreo de errores (RECOMENDADO) ---
SENTRY_DSN=https://<tu-dsn>@sentry.io/<project-id>

# --- Email SMTP (OBLIGATORIO para notificaciones) ---
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=tu-usuario@example.com
EMAIL_HOST_PASSWORD=<tu-password-smtp>
DEFAULT_FROM_EMAIL=noreply@movums.com.mx
SERVER_EMAIL=noreply@movums.com.mx
